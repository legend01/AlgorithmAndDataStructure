{
	"version": "2.0.0",
	"command": "g++",
	"args": ["-g","${file}","-o","${fileDirname}/${fileBasenameNoExtension}.exe"], // 编译命令参数 
	"problemMatcher": 
	{ 
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
		"pattern": 
		{ 
			"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$", 
			"file": 1, 
			"line": 2, 
			"column": 3, 
			"severity": 4, 
			"message": 5 
		} 
	},
	"group": {
		"kind": "build",
		"isDefault": true
	},
	"tasks": [
		{
			"type": "shell",
			"label": "clang.exe build active file",
			"command": "D:\\software\\LLVM\\bin\\clang.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"--debug"
			],
			"options": {
				"cwd": "D:\\software\\LLVM\\bin"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "gcc.exe build active file",
			"command": "D:/software/LLVM/bin/gcc.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "D:/software/LLVM/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}	